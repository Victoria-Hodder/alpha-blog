<h1 class="text-center mt-4 mb-4"> Search Results</h1>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>


<% if @articles.empty? %>
  <h2 class="text-center mt-4 mb-4"> No results found </h2> 
<% else %>
  <%= render 'articles/article' %>
<% end %>


